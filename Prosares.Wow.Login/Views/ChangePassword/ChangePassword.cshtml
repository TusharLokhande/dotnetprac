@model Prosares.Wow.Data.Entities.EmployeeMasterEntity

<style>
    .pass_show{position: relative} 

    .pass_show .ptxt { 

        position: absolute; 
        top: 50%; 
        right: 20px; 
        z-index: 1; 
        margin-top: -10px; 
        cursor: pointer; 
        transition: .3s ease all; 
    } 

    .ptxt-2{
        position: absolute; 
